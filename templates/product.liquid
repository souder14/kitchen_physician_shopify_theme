<section class="section">
  <div class="container">
    <div class="grid grid-cols-2 gap-12">
      <!-- Product Image -->
      <div>
        {% if product.featured_image %}
          <div class="card" style="padding: 0; overflow: hidden;">
            <img
              src="{{ product.featured_image | img_url: '1000x' }}"
              alt="{{ product.title | escape }}"
              style="width: 100%; height: auto; display: block;">
          </div>
        {% else %}
          <div class="card" style="aspect-ratio: 1; display: flex; align-items: center; justify-content: center; background: linear-gradient(135deg, var(--champagne), var(--desert-sand));">
            <span style="font-size: 5rem;">ðŸŒ¿</span>
          </div>
        {% endif %}
      </div>

      <!-- Product Details -->
      <div style="display: flex; flex-direction: column; justify-content: center;">
        <span class="badge badge-success mb-4 badge-dot">Herbal Remedy</span>
        <h1 style="font-size: clamp(2rem, 4vw, 3rem); margin-bottom: var(--space-4);">{{ product.title }}</h1>

        <div style="display: flex; align-items: baseline; gap: var(--space-4); margin-bottom: var(--space-6);">
          <span style="font-size: 2.5rem; font-weight: 700; color: var(--primary);">{{ product.price | money }}</span>
          {% if product.compare_at_price > product.price %}
            <span style="font-size: 1.25rem; text-decoration: line-through; color: var(--text-muted);">{{ product.compare_at_price | money }}</span>
          {% endif %}
        </div>

        <div style="font-size: 1.125rem; line-height: 1.75; color: var(--text-secondary); margin-bottom: var(--space-8);">
          {{ product.description }}
        </div>

        <!-- Add to Cart Form -->
        <form method="post" action="/cart/add" class="card card-flat" style="padding: var(--space-6);">
          <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">

          {% if product.variants.size > 1 %}
            <div class="form-group">
              <label class="form-label">Choose an option</label>
              <select name="id" class="input input-lg">
                {% for variant in product.variants %}
                  <option value="{{ variant.id }}" {% if variant == product.selected_or_first_available_variant %}selected{% endif %}>
                    {{ variant.title }} â€” {{ variant.price | money }}
                  </option>
                {% endfor %}
              </select>
            </div>
          {% endif %}

          <button
            type="submit"
            class="btn btn-primary btn-lg w-full"
            {% unless product.available %}disabled style="opacity: 0.5; cursor: not-allowed;"{% endunless %}>
            {% if product.available %}
              Add to Cart
            {% else %}
              Sold Out
            {% endif %}
          </button>
        </form>

        <!-- Product Features -->
        <div style="margin-top: var(--space-8); padding: var(--space-6); background: rgba(54, 143, 139, 0.05); border-radius: var(--radius-lg); border-left: 4px solid var(--primary);">
          <h3 style="font-size: 1rem; font-weight: 700; margin-bottom: var(--space-3); color: var(--secondary);">Why you'll love it</h3>
          <ul style="list-style: none; padding: 0; margin: 0;">
            <li style="display: flex; align-items: center; gap: 0.5rem; margin-bottom: var(--space-2);">
              <span style="color: var(--primary);">âœ“</span>
              <span>Handcrafted with premium, natural ingredients</span>
            </li>
            <li style="display: flex; align-items: center; gap: 0.5rem; margin-bottom: var(--space-2);">
              <span style="color: var(--primary);">âœ“</span>
              <span>Small-batch production for maximum freshness</span>
            </li>
            <li style="display: flex; align-items: center; gap: 0.5rem;">
              <span style="color: var(--primary);">âœ“</span>
              <span>Made with love in Ward 8, Washington, DC</span>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>
