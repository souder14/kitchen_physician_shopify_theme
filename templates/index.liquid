<!-- Products Section -->
<section class="section">
  <div class="container">
    <!-- Section Header -->
    <div class="section-header">
      <span class="eyebrow">Shop Remedies</span>
      <h2 class="section-title">Herbal products for everyday wellness.</h2>
      <p class="section-subtitle">Explore our small-batch teas, tinctures, salves, and seasonal wellness bundles. Every product is crafted to support the mind, body, and spirit.</p>
    </div>

    {% if collections['frontpage'].products_count > 0 %}
      <!-- Product Grid -->
      <div class="grid grid-cols-3 gap-8">
        {% for product in collections['frontpage'].products limit: 6 %}
          <article class="product-card">
            <a href="{{ product.url | within: collections['frontpage'] }}" style="text-decoration: none; color: inherit;">
              {% if product.featured_image %}
                <img
                  src="{{ product.featured_image | img_url: '600x' }}"
                  alt="{{ product.title | escape }}"
                  class="product-image">
              {% else %}
                <div class="product-image" style="display: flex; align-items: center; justify-content: center; font-size: 3rem;">
                  üåø
                </div>
              {% endif %}
              <div class="product-content">
                <h3 class="product-title">{{ product.title }}</h3>
                <p style="font-size: 0.875rem; color: var(--text-muted); margin-bottom: var(--space-4); line-height: 1.6;">
                  {{ product.description | strip_html | truncate: 80 }}
                </p>
                <div class="flex justify-between items-center">
                  <span class="product-price">{{ product.price | money }}</span>
                  <span style="font-size: 0.875rem; color: var(--primary); font-weight: 600;">View Details ‚Üí</span>
                </div>
              </div>
            </a>
          </article>
        {% endfor %}
      </div>

      <div class="text-center" style="margin-top: var(--space-12);">
        <a href="/collections/all" class="btn btn-outline btn-lg">Browse All Products</a>
      </div>
    {% else %}
      <div class="card text-center">
        <p style="margin: 0; color: var(--text-muted);">No products on the homepage yet. Add items to the "Featured" collection to showcase them here.</p>
      </div>
    {% endif %}
  </div>
</section>

