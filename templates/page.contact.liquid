<section class="section">
  <div class="container">
    <div class="grid grid-cols-2 gap-12">
      <!-- Left Column - Contact Info -->
      <div style="display: flex; flex-direction: column; justify-content: center;">
        <span class="badge badge-success badge-dot mb-4">Contact</span>
        <h1 style="font-size: clamp(2.5rem, 5vw, 4rem); margin-bottom: var(--space-6);">Let's stay in touch.</h1>
        <p style="font-size: 1.25rem; line-height: 1.75; color: var(--text-secondary); margin-bottom: var(--space-8);">
          Have a question, special request, or just want to say hello? Reach out using the form and we'll respond as soon as we can.
        </p>

        <!-- Contact Methods -->
        <div class="card card-gradient">
          <h3 style="font-size: 1.25rem; font-weight: 700; margin-bottom: var(--space-4); color: var(--secondary);">Visit & Connect</h3>
          <div style="display: flex; flex-direction: column; gap: var(--space-4);">
            <div style="display: flex; align-items: start; gap: var(--space-3);">
              <span style="font-size: 1.5rem;">üìç</span>
              <div>
                <strong style="display: block; margin-bottom: 0.25rem;">Location</strong>
                <span style="color: var(--text-secondary);">Ward 8, Washington, DC</span>
              </div>
            </div>
            <div style="display: flex; align-items: start; gap: var(--space-3);">
              <span style="font-size: 1.5rem;">üìß</span>
              <div>
                <strong style="display: block; margin-bottom: 0.25rem;">Email</strong>
                <a href="mailto:info@thekitchenphysician.com" style="color: var(--primary); font-weight: 500;">info@thekitchenphysician.com</a>
              </div>
            </div>
            <div style="display: flex; align-items: start; gap: var(--space-3);">
              <span style="font-size: 1.5rem;">üì±</span>
              <div>
                <strong style="display: block; margin-bottom: 0.25rem;">Social Media</strong>
                <a href="https://instagram.com/TheKitchenPhysician" target="_blank" rel="noopener" style="color: var(--primary); font-weight: 500;">@TheKitchenPhysician</a>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Right Column - Contact Form -->
      <div>
        <div class="card card-elevated">
          <h2 style="font-size: 2rem; margin-bottom: var(--space-6);">Send a message</h2>

          {% form 'contact' %}
            {% if form.posted_successfully? %}
              <div style="padding: var(--space-4); background: rgba(54, 143, 139, 0.1); border-radius: var(--radius); border-left: 4px solid var(--primary); margin-bottom: var(--space-6);">
                <p style="margin: 0; color: var(--primary); font-weight: 600;">Thank you for reaching out ‚Äî we'll be in touch soon!</p>
              </div>
            {% endif %}

            {% if form.errors %}
              <div style="padding: var(--space-4); background: rgba(220, 38, 38, 0.1); border-radius: var(--radius); border-left: 4px solid #dc2626; margin-bottom: var(--space-6);">
                <p style="margin: 0; color: #dc2626; font-weight: 600;">Please check the form and try again.</p>
              </div>
            {% endif %}

            <div style="display: flex; flex-direction: column; gap: var(--space-4);">
              <div class="form-group">
                <label class="form-label">Your Name</label>
                <input class="input" type="text" name="contact[name]" placeholder="John Doe" value="{{ form.name }}" required>
              </div>

              <div class="form-group">
                <label class="form-label">Email Address</label>
                <input class="input" type="email" name="contact[email]" placeholder="you@example.com" value="{{ form.email }}" required>
              </div>

              <div class="form-group">
                <label class="form-label">Phone (Optional)</label>
                <input class="input" type="tel" name="contact[phone]" placeholder="(202) 555-0100" value="{{ form.phone }}">
              </div>

              <div class="form-group">
                <label class="form-label">Message</label>
                <textarea class="input" name="contact[body]" rows="5" placeholder="How can we support your wellness today?" required>{{ form.body }}</textarea>
              </div>

              <button type="submit" class="btn btn-primary btn-lg w-full">Send Message</button>
            </div>
          {% endform %}

          <!-- Newsletter Section -->
          <div style="margin-top: var(--space-8); padding-top: var(--space-8); border-top: 1px solid var(--border);">
            <h3 style="font-size: 1.25rem; font-weight: 700; margin-bottom: var(--space-3); color: var(--secondary);">Join Our Newsletter</h3>
            <p style="font-size: 0.875rem; color: var(--text-muted); margin-bottom: var(--space-4);">
              Get herbal tips, caf√© news, and workshop invites delivered to your inbox.
            </p>
            <form method="post" action="/contact#newsletter" accept-charset="UTF-8">
              <input type="hidden" name="form_type" value="customer">
              <input type="hidden" name="contact[tags]" value="newsletter">
              <div style="display: flex; gap: var(--space-2);">
                <input class="input" type="email" name="contact[email]" placeholder="Your email address" required style="flex: 1;">
                <button class="btn btn-ghost" type="submit">Subscribe</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
